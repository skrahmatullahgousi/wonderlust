<% layout("/layouts/boilerplate")%>
<div class="row mt-3 ">
    <h1>signup on wonderlust</h1>
<div class="col-12 offset-md-2 col-md-8">
    <form action="/signup" method="post" class="needs-validation">
        <div class="mb-3">
            <label for="username"  class="form-label" novalidation>Username</label>
            <input name="username" id="username" class="form-control"  type="text" required>
            <div class="valid-feedback">
              Looks good!
            </div>
          </div>
          <div class="mb-3">
            <label for="email"  class="form-label" novalidation>email</label>
            <input name="email" id="email" class="form-control"  type="text" required>
            <div class="valid-feedback">
              Looks good!
            </div>
          </div>

          <div class="mb-3">
            <label for="password"  class="password" novalidation>password</label>
            <input name="password" id="password" class="form-control"  type="password" required>
            <div class="valid-feedback">
              Looks good!
            </div>
          </div>
 <button class="btn btn-success">SingUp</button>
    </form>
    </div>
    </div>