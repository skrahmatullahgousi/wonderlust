<% layout("/layouts/boilerplate") %>
<h3><%=data.title%></h3>

  <div class="row mt-3">
    <div class="col-8 offset-2">
  <div class="card col-6 offset-3 show-card">
      <img src="<%=data.image.url%>" class="card-img-top show-img" alt="listing_image">
      <div class="card-body">
        <p class="card-text">
         <%=data. description%> <br>
         &#8377;<%=data.price.toLocaleString("en-IN")%> <br>
           <%=data.location%><br>
           <%=data.country%>


        </p>
      </div>
    </div>
    <div class="btns">
    <a href="/listings/<%=data._id%>/edit " class="btn btn-dark col-2 offset-2 edit-btn">Edit</a>
  <form method="post" action="/listings/<%=data._id%>?_method=delete" >
    <button class="btn btn-dark offset-2 ">delete</button>
  </div>
  </form>

</div>
<div>
  <h4>
    Leave a rivew
  </h4>
  <form  action="/listings/<%=data._id%>/reviews" method="post"  class ="col-8 offset-3 needs-validation"  novalidate>
  <div>
    <label for="rating" >Rating</label>
    <input type="range" class="form-range  min ="1" max="5" id="rating" name="review[rating]">
  </div> 

  <div class=" mb-3 mt-3">
    <label for="comment" class="form-label">Comment</label>
    <textarea name="review[comment]" id="comment" cols="30" rows="10"
      class="form-control is-invalid" required></textarea>
    
<div class="invalid-feedback">please submit  some comments for review</div>
  </div> 
  <button class=" btn btn-dark">submit</button>
  </form>
</hr>
<p><b>All Reviews </b></p>

 <div class="rows">
    <% for (let review of data.reviews) { %>
      <div class="card col-5 ms-3 mb-3">
      <div class="card-body">
        <h5 class="card-title">Jane Deo</h5>
        <p class="card-text"><%=review.comment%></p>
        <P class="card-text"><%=review.rating%>stars</P>
        <div>
        <from method="post " action="/listings/<%=data._id%>/review/<%=review._id%>/" class="mb-3"?_method="Delete">
<button class="btn btn-sm btn-dark">Delete</button>
        </from>
      </div>
    </div>
    </div>
  </div>
  
<%}%>
</div>
</div>
</html>