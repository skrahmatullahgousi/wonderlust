<%layout("/layouts/boilerplate")%>
<body>
    <div class="row mt-3">
        <div class="col-8 offset-2">
    <h1>Edit Listing</h1>
    <div class="col-8 offset">
    <form  method="POST" action="/listings/<%=data._id%>?_method=PUT"  novalidate class="needs-validation">

        <div class="mb-3">
            <label for="title" class="form-label">Title</label>
        <input id="title" name="listing[title]" value="<%= data.title %>" type="text" class="form-control"required >
        <br><br>
        <div class="valid-feedback">
      Looks good!
    </div>
        </div>
        <div class="mg-3">
        <label for="description" class="form-label">Description</label>
        <textarea id="description" name="listing[description]" rows="10" width="50%" class="form-control" required><%= data.description %></textarea>
    </div>
        
    <div class="mb-3">
        Original image <br/>
        <img style="height: 250px;width: 250px;" src="<%= listing.image.url  %>" alt="listing image">
    </div>

    <div class="mb-3">
         <lable for="image" class="form-label">Upload New Image</lable>
        <input type="file" name="listing[image]"  class="form-control">
    </div>
  

        <div class="row">
            <div class="mb-3 col-md-4">
              <label for="price" class="form-label">Price</label>
        <input id="price" name="listing[price]" value="<%= data.price %>" type="number" class="form-control" required>
        <div class="valid-feedback">
            Please enter valid price!
          </div>
      </div>
      <div class="mb-3 col-md-8">
        <label for="country" class="form-label">Country</label>
        <input id="country" name="listing[country]" value="<%= data.country %>" type="text" class="form-control" required>
       </div>
       <div class="valid-feedback">
        Please enter valid country!
      </div>
       </div>

       <div class="mb-3">
        <label for="location" class="form-label">Location</label>
        <label for="location">Location:</label>
        <input id="location" name="listing[location]" value="<%= data.location %>" type="text" class="form-control" required>
        <div class="valid-feedback">
            Please enter valid location!
          </div>
       </div>
        <br /> <br />
        <button class=" btn btn-dark edit-btn mt-3" >EDIT</button>
    </form>
</div>
</div>
</body>

